<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/helper_color"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_scheduleItem_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Development"
            android:textSize="25dp"
            android:textColor="@color/primary_color_light"/>
        <TextView
            android:id="@+id/textView_scheduleItem_semster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sem V"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:textColor="@color/primary_color_light"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/textView_scheduleItem_semster"
            android:src="@drawable/more_options"/>

        <TextView
            android:id="@+id/textView_scheduleItem_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Classroom no : 32"
            android:layout_below="@id/textView_scheduleItem_subject"
            android:textColor="@color/secondary_color_light"/>

        <TextView
            android:id="@+id/textView_scheduleItem_divison"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="H4"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/textView_scheduleItem_semster"
            android:textColor="@color/secondary_color_light"/>

        <TextView
            android:id="@+id/textView_scheduleItem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 - 11:30"
            android:layout_marginTop="2dp"
            android:textSize="18dp"
            android:layout_below="@id/textView_scheduleItem_classroom"
            android:textColor="@color/secondary_color_light"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>